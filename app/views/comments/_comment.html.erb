<% unless comment.private? || comment.archived? %>

  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <% if comment.user == current_user %>
    <p>
      <%= link_to "Delete", [comment.article, comment], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </p>|
    <p>
      <%= link_to "Edit", edit_article_comment_url(@article) %>
    </p>
  <% end %>

<% end %>

