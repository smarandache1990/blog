
<div class="container">
  <h1>Articles</h1>

  <p>Our blog has <%= pluralize(Article.public_count, 'article') %>  and counting!</p>

  <ul>
    <% @articles.each do |article| %>
      <% unless article.archived? || article.private? %>
        <li>
          <%= link_to article.title, article %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to "New Article", new_article_path %>
</div>